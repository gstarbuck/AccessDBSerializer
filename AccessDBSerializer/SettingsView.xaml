<Window x:Class="AccessDBSerializer.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SettingsView" Height="134" Width="622">
    <Grid>
        <Label Content="Working Folder:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Access File:" HorizontalAlignment="Left" Margin="35,41,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtWorkingFolder" HorizontalAlignment="Left" Height="23" Margin="109,14,0,0" TextWrapping="Wrap" Text="{Binding WorkingFolder}" VerticalAlignment="Top" Width="396"/>
        <TextBox Name="txtAccessFilename" HorizontalAlignment="Left" Height="23" Margin="109,44,0,0" TextWrapping="Wrap" Text="{Binding AccessDBFilename}" VerticalAlignment="Top" Width="396"/>
        <Button Name="btnOk" Content="Ok" HorizontalAlignment="Left" Margin="272,72,0,0" VerticalAlignment="Top" Width="75" Click="btnOk_Click"/>
        <Button x:Name="btnChangeWorkingFolder" Content="Select" HorizontalAlignment="Left" Margin="519,16,0,0" VerticalAlignment="Top" Width="75" Click="btnChangeWorkingFolder_Click"/>
        <Button x:Name="btnOk_ChangeAccessFile" Content="Select" HorizontalAlignment="Left" Margin="519,47,0,0" VerticalAlignment="Top" Width="75" Click="btnOk_ChangeAccessFile_Click"/>

    </Grid>
</Window>
