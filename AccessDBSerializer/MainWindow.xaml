<Window x:Class="AccessDBSerializer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="386" Width="525">
    <Grid>
        <Button Name="btnDecompose" Content="Decompose" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="btnDecompose_Click"/>

        <Button Name="btnRecompose" Content="Recompose" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="75" Click="btnRecompose_Click"/>
        <ListBox Name="listResults" HorizontalAlignment="Left" Height="299" Margin="104,10,0,0" VerticalAlignment="Top" Width="403"/>
        <Button Name="btnSettings" Content="Settings" Click="btnSettings_Click" HorizontalAlignment="Left" Margin="10,325,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox Name="txtFilename" HorizontalAlignment="Left" Height="23" Margin="104,322,0,0" TextWrapping="Wrap" Text="{Binding AccessDBFilename}" VerticalAlignment="Top" Width="403"/>
    </Grid>
</Window>
